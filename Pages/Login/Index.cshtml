@page
@model dotnet_kp.Pages.Login.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Your Application Name</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center" id="h2Enter">Вход в аккаунт</h2>
            <form method="post" class="mt-4" id="login-form">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" asp-for="UserLogin.Email" name="UserLogin.Email" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label for="Password">Пароль</label>
                    <input type="password" id="Password" asp-for="UserLogin.Password" name="UserLogin.Password" class="form-control" required/>
                </div>
                <div class="form-check">
                    <input type="checkbox" asp-for="UserLogin.RememberMe" name="UserLogin.RememberMe" class="form-check-input"/>
                    <label class="form-check-label">Запомнить меня</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Войти</button>
                <p class="text-center mt-2">Нет аккаунта? <a asp-page="/register/Index" id="switch-to-register">Зарегистрироваться</a></p>
            </form>
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger">
                    <h4>Error</h4>
                    <p>@ViewData["ErrorMessage"]</p>
                </div>
            }
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</body>
</html>