@using System.Security.Claims
@using Azure.Core

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_kp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dotnet_kp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ElShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Корзина с иконкой -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <div class="d-flex">
                                    <a class="nav-link" asp-area="" asp-page="/cart/Index">
                                        <i class="fa fa-shopping-cart">
                                            <span id="cart-badge" class="cart-badge">
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <span id="cart-badge-count">0</span>
                                                }
                                            </span>
                                        </i> Корзина
                                    </a>
                                    <form method="post" asp-page-handler="SignOut">
                                        <button type="submit" class="btn btn-warning">Выйти</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    }

                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login/Index">Вход / Регистрация</a>
                            </li>

                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/_layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>